<Window x:Class="Check_IT.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="360" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Email -->
            <RowDefinition Height="Auto"/> <!-- Password -->
            <RowDefinition Height="Auto"/> <!-- Spacer -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Email:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,8,6"/>
        <TextBox x:Name="EmailTextBox" Grid.Row="0" Grid.Column="1" Margin="0,6,0,6"/>

        <TextBlock Text="Password:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,8,6"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Grid.Column="1" Margin="0,6,0,6"/>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="LoginButton" Width="100" Margin="0,0,8,0" Click="LoginButton_Click">Login</Button>
            <Button Width="100" Click="CancelButton_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>